
@{
    ViewData["Title"] = "List Box";
    if (ViewBag.ListBox == null)
    {
        <form class="row">
            <div class="col-md-3">
                <h1>List Box</h1>
                <br />
                <h3>Month</h3>
                <select name="ListBox" size="6" class="custom-select mr-sm-2" id="inlineFormCustomSelect">
                    <option selected value="January">January</option>
                    <option value="Febuary">Febuary</option>
                    <option value="March">March</option>
                    <option value="April">April</option>
                    <option value="May">May</option>
                    <option value="June">June</option>
                    <option value="July">July</option>
                    <option value="August">August</option>
                    <option value="September">September</option>
                    <option value="October">October</option>
                    <option value="November">November</option>
                    <option value="December">December</option>
                </select>
                <br />
                <button formmethod="post" formaction="~/Controls/Save_ListBox" class="btn btn-light col-md-3" style="display: inline" type="submit">Submit</button>
            </div>
        </form>
    }
    else
    {
<div>
    <h1>List Box</h1>
    <br />
    <b>Months</b>
    <h3>@ViewBag.ListBox</h3>
</div>
     
    }
}