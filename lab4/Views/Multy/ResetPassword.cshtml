@model Lab1.Models.ResetModel
@{
    ViewData["Title"] = "Reset your password";
}

<h2>Reset your password</h2>

<form method="post">
    <div asp-validation-summary="All"></div>
    <label><b>Email</b></label><br />
    <input type="text" name="Email" /><br />
    <br />
    <div style="display:flex">
        <button class="btn btn-primary col-md-auto" style="display: inline" type="submit" name="action" value="Send">Send me a code</button><br />
        <button class="btn btn-light col-md-auto" style="display: inline; margin-left:10px" type="submit" name="action" value="NoSend">I have a code</button>
    </div>
    
</form>